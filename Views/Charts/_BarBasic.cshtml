@* Views/Charts/_BarBasic.cshtml *@

<!-- Chart container card -->
<div class="card shadow-sm mt-3" id="chartCard">
    <!-- Card header with chart title -->
    <div class="card-header">
        <h4 id="chartTitle"><strong>Basic Bar Chart</strong></h4>
    </div>

    <!-- Card body containing the chart container div -->
    <div class="card-body">
        <div id="barChartContainer"></div>
    </div>
</div>

<!-- D3 + Chart Script Modules -->
<script type="module">
    // Handle module loading and chart rendering
    import { ChartRenderers } from '/js/charts/chartBarRenderer.js';

    // Call the function to render the chart with specified dataset and settings
    ChartRenderers.renderBarChart({
        // Sample dataset for the chart
        data: [
            { region: "Africa", "Year 1990": 632, "Year 2000": 814, "Year 2021": 1393 },
            { region: "America", "Year 1990": 727, "Year 2000": 841, "Year 2021": 1031 },
            { region: "Asia",    "Year 1990": 3202, "Year 2000": 3714, "Year 2021": 4695 },
            { region: "Europe",  "Year 1990": 721,  "Year 2000": 726,  "Year 2021": 745  }
        ],

        // ID of the container where the chart will be rendered
        containerId: "#barChartContainer",
        
        // Title of the chart
        title: "Population by Region",
        
        // Labels for the axes (can be empty if not required)
        xLabel: "Population",
        yLabel: "",
        
        // Unit to display with X-axis values (can be empty if not required)
        xUnit: "millions", 
        
        // Field to use for Y-axis (can be empty if not required)
        yField: "region",
        
        // Keys in the dataset that represent each series
        series: ["Year 1990", "Year 2000", "Year 2021"],
        
        // Color mapping for each series (hex color codes)
        colors: {
            "Year 1990": "#2b908f",
            "Year 2000": "#90ee7e",
            "Year 2021": "#f45b5b"
        },
        
        // Whether to display value labels on the chart
        showLabels: true,
        
        // Whether to stack the series horizontally
        stacked: false
    });
</script>
